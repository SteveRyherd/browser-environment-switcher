{
  "name": "Browser Environment Switcher",
  "manifest_version": 3,
  "version": "2.0.0",
  "description": "Switch between development, certification, and production environments easily",
  
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "Switch Environment",
    "default_popup": "src/popup/switcher.html",
    "default_icon": {
      "16": "icons/app-icon-16.png",
      "32": "icons/app-icon-32.png",
      "48": "icons/app-icon-48.png",
      "128": "icons/app-icon-128.png"
    }
  },

  "permissions": [
    "tabs",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/app-icon-16.png",
    "32": "icons/app-icon-32.png",
    "48": "icons/app-icon-48.png",
    "128": "icons/app-icon-128.png"
  }
}